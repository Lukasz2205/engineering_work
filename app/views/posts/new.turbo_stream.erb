<%= turbo_stream.replace "new_post" do %>
  <%= render partial: 'posts/form', locals: { f: Post.new } %>
<% end %>

<% unless post_id.nil?  %>
  <%= turbo_stream.remove "post_#{post_id}" %>
<% end %>

<%= turbo_stream.append "messages_container",
                        partial: "layouts/messages",
                        locals: { alert: alert } %>