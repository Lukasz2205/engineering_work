<%= turbo_stream.replace "likeable_options_#{p.id}" do %>
  <%= turbo_frame_tag "likeable_options_#{p.id}" do %>
    <% if p.class == Post %>
      <%= link_to likes_path(post_id: p), data: { turbo_method: :post }  do %>
        <i class="fa-regular fa-heart fa-lg"></i>
      <% end %>
    <% else %>
      <%= link_to likes_path(comment_id: p), data: { turbo_method: :post }  do %>
        <i class="fa-regular fa-heart fa-lg"></i>
      <% end %>
    <% end %>
    <%= p.likes.count %>
  <% end %>
<% end %>