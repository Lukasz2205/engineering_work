<div class="columns is-12 is-multiline">
  <div class="column is-11 box" style="background-color: gray;height: 100vh;">
    <% if @single_room %>
      <h4 class="text-center"> <%= current_user.profile.name || @single_room.name %> </h4>
      <%= turbo_stream_from @single_room %>
      <div class="chat">
        <div id="messages" style="overflow: auto;height: 75vh; display: flex;flex-direction: column-reverse;">
          <%= render @messages %>
        </div>
        <div class="msg-form" style="margin-top: 15px; width: 100%">
          <%= render partial: 'shared/new_message_form' %>
        </div>
      </div>
  <% end %>
  </div>

  <div class="column is-1">
    <h5> Hi <%= current_user.profile.name %> </h5>
    <h4> Users </h4>
    <div>
      <%= turbo_stream_from "users" %>
      <div id="users">
        <%= render @profiles %>
      </div>
    </div>
    <h4> Rooms </h4>
    <%= render partial: "shared/new_room_form" %>
    <div>
      <%= turbo_stream_from "rooms" %>
      <div id="rooms">
        <%= render @rooms %>
      </div>
    </div>
  </div>
</div>