<%= turbo_stream.append "comment_#{@comment.id}_reply_form" do %>
  <%= render partial: 'comments/form_reply', locals: { comment: @comment } %>
<% end %>

<%= turbo_stream.replace "show_hide_comment_#{@comment.id}" do %>
  <%= render partial: 'comments/hide', locals: { comment: @comment} %>
<% end %>