<%= turbo_frame_tag "comment_#{comment.id}" do %>
  <div class="card" style="background-color: #E4E4E4; margin: 25px 25px 10px 25px;">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4"><%= comment.profile.name %></p>
          <p class="subtitle is-6"><%= time_ago_in_words(comment.created_at) %></p>
        </div>
        <% if current_user.profile == comment.profile %>
          <%= link_to post_comment_path(comment.post, comment), data: { turbo_method: :delete } do %>
            <i class="fa-solid fa-trash fa-lg"></i>
          <% end %>
        <% end %>
      </div>
      <div class="content">
        <%= comment.message %>
      </div>
    </div>
    <span class="card-footer" style="margin-bottom: 15px"></span>
    <div class="action-buttons" style="display: flex; justify-content: space-evenly; padding: 10px; align-items: center">
      <a href="#">
        <i class="fa-regular fa-heart fa-lg"></i>
      </a>
      <a href="#">
        <i class="fa-regular fa-comment fa-lg"></i>
      </a>
      <a href="#">
        <i class="fa-solid fa-share fa-lg"></i>
      </a>
    </div>
  </div>
  <div class="columns is-12 is-multiline reply-options-section">

    <div class="column is-12">
      <%# if comment.replies.any? %>
      <%# comment.replies.each do |comm| %>
      <%#= render partial: 'posts/reply', locals: { comment: comm} %>
      <%# end %>
      <%# end %>
    </div>

    <div class="column is-12" style="display: flex; justify-content: center">
      <%#= form_with model: comment.replies.new, url: post_reply_path(comment.post, comment) do |f| %>
      <%#= f.text_field :body, class: 'input', style: 'width: 100%' %>
      <%#= f.submit 'Dodaj', class: 'button is-primary'  %>
      <%# end %>
    </div>
  </div>
<% end %>