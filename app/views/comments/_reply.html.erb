<%= turbo_frame_tag "comment_#{comment.id}" do %>
  <div class="card" style="background-color: #E4E4E4; margin: 25px 25px 10px 25px;">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4"><%= comment.profile.name %></p>
          <p class="subtitle is-6"><%= time_ago_in_words(comment.created_at) %></p>
          <p class="subtitle is-2">W odpowiedzi do: <%= comment.parent_id %></p>
        </div>
        <% if current_user.profile == comment.profile %>
          <%= link_to post_comment_path('123', comment), data: { turbo_method: :delete } do %>
            <i class="fa-solid fa-trash fa-lg"></i>
          <% end %>
        <% end %>
      </div>
      <div class="content">
        <%= comment.message %>
      </div>
    </div>
    <span class="card-footer"></span>
    <div class="action-buttons" style="display: flex; justify-content: space-evenly; padding: 10px; align-items: center">
      <% unless comment.liked?(current_user.profile) %>
        <%= render partial: 'likes/like', locals: { obj: comment, post: false } %>
      <% else %>
        <%= render partial: 'likes/unlike', locals: { obj: comment, post: false } %>
      <% end %>
      <%= render partial: 'comments/show', locals: { comment: comment} %>
      <i class="fa-solid fa-share fa-lg"></i>
    </div>
    <div class="columns is-12 is-multiline reply-options-section">

      <div id="comment_<%= comment.id %>_replies" class="column is-12">
        <% if comment.replies.any? %>
          <% comment.replies.each do |reply| %>
            <%= render partial: 'comments/reply', locals: { comment: reply } %>
          <% end %>
        <% end %>
      </div>

      <div class="column is-8">
        <div id="comment_<%= comment.id %>_reply_form"></div>
      </div>
    </div>
  </div>
<% end %>