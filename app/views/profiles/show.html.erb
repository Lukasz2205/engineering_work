<div class="columns is-12 is-multiline">
  <div class="column is-12 normal-margin-top">
    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-48x48">
              <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-4">
              <%= @profile.name %>
            </p>
            <p class="subtitle is-6"><%= @profile.user.email %></p>
          </div>
          <%#= turbo_frame_tag 'followable_options' do %>
            <%# if current_user.profile == @profile %>
              <%#= link_to 'Edytuj profil', edit_profile_path, data: { turbo: 'false' }, class: 'button' %>
            <%# elsif current_user.profile.followed_profiles.include?(@profile) %>
              <%#= render partial: 'profiles/unfollow', locals: { profile: @profile } %>
            <%# else %>
              <%#= render partial: 'profiles/follow', locals: { profile: @profile } %>
            <%# end %>
          <%# end %>
        </div>
        <div class="content">
          <%= @profile&.description %>
          <br>
          <time><%= time_ago_in_words(@profile.created_at) %></time>
        </div>
      </div>
      <footer class="card-footer">
        <a href="#" class="card-footer-item">Posty</a>
        <%= link_to 'Polubienia', profile_liked_posts_path(@profile.id), class: 'card-footer-item' %>
        <a href="#" class="card-footer-item">Komenatarze</a>
      </footer>
    </div>
  </div>
  <% if @profile == current_user.profile %>
    <div class="column is-12">
      <%= render partial: 'posts/form', locals: { post: Post.new } %>
    </div>
  <% end %>
  <div class="column is-12">
    <div id='posts-list' class="columns is-12 is-multiline">
      <% @posts.each do |p| %>
        <div class="column is-12">
          <%= render 'shared/profile_post', p: p %>
        </div>
      <% end %>
    </div>
  </div>
</div>