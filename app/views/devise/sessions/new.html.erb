<div class="column is-12" style="display: flex; justify-content: center; align-items: center">
  <div class="card" style="padding: 3em;">
    <h1 class="title" style="display: flex; justify-content: center">
      Zaloguj siÄ™!
    </h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br/>
        <p class="control has-icons-left has-icons-right">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </p>
      </div>

      <div class="field">
        <%= f.label :password %>

        <p class="control has-icons-left">
          <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
          <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
         </span>
        </p>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'button is-primary normal-margin-bottom', style: 'width: 100%' %>
      </div>
      <%= render "devise/shared/links" %>

  <% end %>
  </div>
</div>